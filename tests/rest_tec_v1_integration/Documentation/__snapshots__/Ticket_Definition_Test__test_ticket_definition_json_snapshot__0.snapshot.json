{
    "allOf": [
        {
            "$ref": "#/components/schemas/TEC_Post_Entity"
        },
        {
            "type": "object",
            "description": "A ticket",
            "title": "Ticket",
            "properties": {
                "description": {
                    "description": "The description of the ticket",
                    "type": "string",
                    "example": "This is a description of the ticket"
                },
                "on_sale": {
                    "description": "Whether the ticket is on sale",
                    "nullable": true,
                    "type": "boolean",
                    "example": true
                },
                "sale_price": {
                    "description": "The sale price of the ticket",
                    "nullable": true,
                    "type": "number",
                    "example": 20
                },
                "price": {
                    "description": "The price of the ticket",
                    "type": "number",
                    "example": 25
                },
                "regular_price": {
                    "description": "The regular price of the ticket",
                    "type": "number",
                    "example": 25
                },
                "show_description": {
                    "description": "Whether to show the ticket description",
                    "type": "boolean",
                    "example": true
                },
                "start_date": {
                    "description": "The start sale date of the ticket",
                    "nullable": true,
                    "type": "string",
                    "format": "date-time",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$",
                    "example": "2025-05-01 00:00:00"
                },
                "end_date": {
                    "description": "The end sale date of the ticket",
                    "nullable": true,
                    "type": "string",
                    "format": "date-time",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$",
                    "example": "2025-06-04 23:59:59"
                },
                "sale_price_start_date": {
                    "description": "The start date for the sale price",
                    "nullable": true,
                    "type": "string",
                    "format": "date",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "example": "2025-06-01"
                },
                "sale_price_end_date": {
                    "description": "The end date for the sale price",
                    "nullable": true,
                    "type": "string",
                    "format": "date",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "example": "2025-06-30"
                },
                "event": {
                    "description": "The ID of the post this ticket is associated with. Normally an event-like post.",
                    "type": "integer",
                    "example": 123
                },
                "manage_stock": {
                    "description": "Whether stock is being managed for this ticket",
                    "type": "boolean",
                    "example": true
                },
                "stock": {
                    "description": "The stock quantity available",
                    "nullable": true,
                    "type": "integer",
                    "example": 100
                },
                "type": {
                    "description": "The type of ticket",
                    "type": "string",
                    "example": "default"
                },
                "sold": {
                    "description": "The number of tickets sold",
                    "type": "integer",
                    "example": 42
                },
                "sku": {
                    "description": "The SKU of the ticket",
                    "nullable": true,
                    "type": "string",
                    "example": "TICKET-123"
                },
                "menu_order": {
                    "description": "The order in which the ticket should be displayed",
                    "type": "integer",
                    "default": 0,
                    "example": 5
                }
            }
        }
    ]
}