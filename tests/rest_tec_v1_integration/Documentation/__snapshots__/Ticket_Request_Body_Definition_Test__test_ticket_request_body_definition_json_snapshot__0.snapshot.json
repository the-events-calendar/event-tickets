{
    "allOf": [
        {
            "$ref": "#/components/schemas/TEC_Post_Entity_Request_Body"
        },
        {
            "title": "Ticket Request Body",
            "description": "The request body for the ticket endpoint",
            "type": "object",
            "properties": {
                "event": {
                    "description": "The ID of the post this ticket is associated with. Normally an event-like post.",
                    "type": "integer",
                    "example": 123
                },
                "price": {
                    "description": "The price of the ticket",
                    "type": "number",
                    "example": 25.05
                },
                "sale_price": {
                    "description": "The sale price of the ticket",
                    "type": "number",
                    "example": 20.05
                },
                "sale_price_start_date": {
                    "description": "The start date for the sale price",
                    "type": "string",
                    "format": "date",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "example": "2025-06-01"
                },
                "sale_price_end_date": {
                    "description": "The end date for the sale price",
                    "type": "string",
                    "format": "date",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
                    "example": "2025-06-30"
                },
                "capacity": {
                    "description": "The capacity of the ticket. Use a positive integer for limited capacity or \"unlimited\" for unlimited capacity.",
                    "type": "integer",
                    "examples": {
                        "limited": 100,
                        "unlimited": -1
                    },
                    "example": 100
                },
                "event_capacity": {
                    "description": "The capacity of the event",
                    "type": "integer",
                    "example": 140
                },
                "stock": {
                    "description": "The stock quantity available",
                    "type": "integer",
                    "example": 100
                },
                "show_description": {
                    "description": "Whether to show the ticket description",
                    "type": "boolean",
                    "example": true
                },
                "stock_mode": {
                    "description": "The stock mode of the ticket",
                    "type": "string",
                    "default": "own",
                    "enum": [
                        "own",
                        "capped",
                        "global",
                        "unlimited"
                    ],
                    "example": "own"
                },
                "type": {
                    "description": "The type of ticket",
                    "type": "string",
                    "example": "default"
                },
                "start_date": {
                    "description": "The start sale date of the ticket",
                    "type": "string",
                    "format": "date-time",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$",
                    "example": "2025-05-01 00:00:00"
                },
                "end_date": {
                    "description": "The end sale date of the ticket",
                    "type": "string",
                    "format": "date-time",
                    "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2} [0-9]{2}:[0-9]{2}:[0-9]{2}$",
                    "example": "2025-09-04 23:59:59"
                },
                "menu_order": {
                    "description": "The order in which the ticket should be displayed",
                    "type": "integer",
                    "default": 0,
                    "example": 5
                },
                "sku": {
                    "description": "The SKU of the ticket",
                    "type": "string",
                    "example": "TICKET-123"
                }
            }
        }
    ]
}