{
	"build": [
		"cd common && composer -- pup build",
		"composer install --no-dev",
		"npm ci --no-audit --no-fund",
		"npm run build",
		"npm run before-zip"
	],
	"build_dev": [
		"cd common && composer -- pup build",
		"composer install",
		"npm ci --no-audit --no-fund",
		"npm run build",
		"npm run before-zip"
	],
	"workflows": {
		"tec-zip": [
			"git submodule update --recursive --init",
			"pup build",
			"pup check",
			"pup i18n",
			"cd common && pup i18n",
			"pup package $(pup get-version)",
			"pup clean"
		]
	},
	"checks": {
		"tbd": {
			"dirs": [
				 "src",
				 "common/src"
			]
		},
		"version-conflict": {
			"fail_method": "error",
			"fail_method_dev": "warn"
		}
	},
	"i18n": [
		{
			"textdomain": "event-tickets",
			"url": "https://translate.wordpress.org",
			"slug": "wp-plugins/event-tickets/stable"
		},
		{
			"textdomain": "event-tickets",
			"url": "https://translations.stellarwp.com/glotpress/",
			"slug": "event-tickets"
		}
	],
	"paths": {
		"changelog": "readme.txt",
		"css": [
			"src/resources/postcss",
			"common/src/resources/postcss"
		],
		"js": [
			"src/resources/js",
			"src/modules",
			"common/src/resources/js",
			"common/src/modules"
		],
		"sync_files": [
			"common/.distfiles",
			"common/.gitattributes"
		],
		"versions": [
			{
				"file": "src/Tribe/Main.php",
				"regex": "(const VERSION += ')([^']+)"
			},
			{
				"file": "event-tickets.php",
				"regex": "(Version: )(.+)"
			},
			{
				"file": "package.json",
				"regex": "(\"version\": ?\")([^\"]+)"
			},
			{
				"file": "readme.txt",
				"regex": "(Stable tag: )(.+)"
			}
		],
		"views": [
			"src/views",
			"common/src/views"
		]
	},
	"zip_name": "event-tickets"
}
