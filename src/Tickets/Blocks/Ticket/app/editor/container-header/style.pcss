.tribe-editor__container-panel__header {

	.tribe-editor__ticket & {
		align-items: flex-start;
		display: flex;
	}
}

.tribe-editor__ticket__container-header-details {
	flex: auto;
}

.tribe-editor__ticket__container-header-label {
	color: var(--tec-color-icon-primary-alt) !important;
	display: block;
	font-family: var(--tec-font-family-sans-serif);
	font-size: var(--tec-font-size-1);
	font-style: normal;
	font-weight: var(--tec-font-weight-regular);
	line-height: var(--tec-line-height-0);
	margin-top: 4px;
	text-align: right;
}

.tribe-editor__ticket__container-header__sale-label-container {
	display: flex;
}

.tribe-editor__ticket__container-header__sale-label {
	background-color: #eaf1ff;
	border-radius: var(--tec-spacer-2);
	color: var(--tec-color-icon-focus);
	display: inline-block;
	font-size: var(--tec-font-size-0);
	font-weight: var(--tec-font-weight-bold);
	margin-bottom: 5px;
	padding: 4px 6px;
}

.tribe-editor__ticket-on-sale {

	.tribe-editor__ticket__container-header-price__sale-price {
		padding-top: 2px;
	}

	.tribe-editor__ticket__container-header-quantity {
		padding-top: 30px;
	}
}
