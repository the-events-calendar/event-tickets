.tec-tickets__seating-tab-heading {
	margin: 28px 0 0 0;
}

.tec-tickets__seating-tab-heading-wrapper {
	align-items: baseline;
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 22px;
}

.button.tec-tickets__seating-tab-heading__button,
.tec-tickets-seating-modal-wrapper.tec-tickets__seating-tab-heading__button {
	margin-bottom: 12px;
	margin-left: 6px;
}

.tec-tickets-seating-modal-wrapper .tec-tickets-seating-modal__button {
	display: block;
}

.tec-tickets__seating-tab-heading__description {
	flex-basis: 100%;

	p {
		margin-bottom: 0;
		margin-top: 0;
	}
}

.tec-tickets__seating-tab-wrapper--iframe-wrapper {
	display: flex;
}
