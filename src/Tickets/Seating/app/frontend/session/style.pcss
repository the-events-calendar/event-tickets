.tribe-common .tec-tickets-seating__timer {

	&.tec-tickets-seating__timer--hidden {
		display: none;
	}
	align-items: center;
	align-self: stretch;
	background: var(--tec-color-background-primary-multiday);
	border-radius: 6px;

	box-sizing: border-box;
	display: flex;
	flex-direction: row;
	flex-shrink: 0;
	gap: var(--tec-spacer-1);
	justify-content: flex-start;
	padding: var(--tec-spacer-1) var(--tec-spacer-2) var(--tec-spacer-1) var(--tec-spacer-2);
	position: relative;

	.dashicons.dashicons-clock {
		color: var(--tec-color-text-primary);
	}

	.tec-tickets-seating__message {
		font-family: var(--tec-font-family-sans-serif);
		font-size: 12px;
		font-weight: var(--tec-font-weight-bold);
		line-height: 17px;
		text-align: left;

		.tec-tickets-seating__message-text {
			color: var(--tec-color-text-primary);
		}

		.tec-tickets-seating__message-time {
			color: var(--tec-color-accent-primary);
		}
	}

	@media screen and  (max-width: 960px) {
		border-radius: 50px;
	}
}

.tec-tickets-seating__back-to-event {
	margin-top: var(--tec-spacer-2);

	&--link {
		font-size: var(--tec-font-size-2);
		line-height: var(--tec-line-height-2);
		text-decoration: underline !important;
	}
}

.tribe-common .tribe-dialog__wrapper.tribe-tickets-seating__interrupt-wrapper {
	min-width: 360px;
	padding: 20px;
	width: auto;

	.tribe-tickets-seating__interrupt-dialog {
		width: 100%;
	}

	.tribe-tickets-seating__interrupt-header {
		align-items: center;
		display: flex;
		flex-direction: row;
		font-size: var(--tec-font-size-6);
		line-height: var(--tec-line-height-0);

		.dashicons {
			color: var(--tec-color-icon-error);
			margin-right: var(--tec-spacer-1);
		}

		.tribe-tickets-seating__interrupt-title {
			font-family: var(--tec-font-family-sans-serif);
		}
	}

	.tribe-tickets-seating__interrupt-content {
		font-family: var(--tec-font-family-sans-serif);
		font-size: var(--tec-font-size-2);
		font-weight: var(--tec-font-weight-regular);
		line-height: var(--tec-line-height-2);
		margin-bottom: var(--tec-spacer-3);
	}

	.tribe-tickets-seating__interrupt-footer {
		display: flex;
		flex-direction: row;
		justify-content: flex-end;

		button {
			font-size: var(--tec-font-size-2);
			font-weight: var(--tec-font-weight-bold);
			line-height: var(--tec-line-height-3);
			width: auto;
		}
	}
}
