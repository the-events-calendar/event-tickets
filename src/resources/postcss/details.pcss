.tribe__details__poly {

	.tribe__details__summary {
		&:before {
			content: '\25bc';
		}
	}

	.tribe__details__content {
		display: none;
	}

	&.tribe__details--open {
		.tribe__details__content {
			display: block;
		}
	}

	@media (--viewport-medium) {
		.tribe__details__poly.tribe__details--mobile {

			.tribe__details__summary {
				display: none;
			}

			.tribe__details__content {
				display: block;
			}
		}
	}
}
