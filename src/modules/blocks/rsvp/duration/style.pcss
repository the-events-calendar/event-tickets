.tribe-editor__rsvp-duration {
	align-items: flex-start;
	display: flex;
	flex-wrap: wrap;

	.tribe-editor__timepicker-label-container {
		border-width: 1px;
		border-color: #e1e3e6;

		.tribe-editor__btn-input {
			padding-top: 11px;
			padding-bottom: 10px;
			font-size: 14px;
		}
	}
}

.tribe-editor__rsvp-duration__error {
	color: red;
	flex: none;
	font-size: 15px;
	line-height: 18px;
	margin-top: 10px;
	padding-left: 108px;
	width: 100%;
}
