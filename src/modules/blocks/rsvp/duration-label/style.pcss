.tribe-editor__rsvp-duration__duration-label {
	flex: none;
	padding-top: var(--tec-spacer-2);
	position: relative;
	width: 140px;
	z-index: 1;
}

.tribe-editor__labeled-item__label {

	.tribe-editor__rsvp-duration__duration-label & {
		font-size: var(--tec-font-size-2);
		font-weight: 700;
		letter-spacing: 0.38px;
		line-height: 18px;

		.tribe-editor__rsvp-container--disabled & {
			color: #aeb4bb;
		}
	}
}

.tribe-editor__label-with-tooltip__tooltip-label {

	.tribe-editor__rsvp-duration__duration-label & {
		margin-left: 5px;
	}
}

svg.tribe-editor__rsvp-duration__duration-tooltip-label {
	fill: #a2aab2;
	height: 17px;
	width: 17px;

	.tribe-editor__rsvp-container--disabled & {
		fill: #aeb4bb;
	}
}
